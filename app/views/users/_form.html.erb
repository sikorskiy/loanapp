<div class="form-group">
  <label class="control-label col-sm-2"> Имя: </label>
  <div class="col-sm-5">
    <%= f.text_field :name, placeholder: "Введите имя", class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2"> Фамилия: </label>
  <div class="col-sm-5">
    <%= f.text_field :lastname, placeholder: "Введите фамилию", class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2"> E-mail: </label>
  <div class="col-sm-5">
    <%= f.email_field :email, placeholder: "Введите почту", class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2"> Пароль: </label>
  <div class="col-sm-5">
    <%= f.password_field :password, placeholder: "Введите пароль", class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2"> Подтверждение: </label>
  <div class="col-sm-5">
    <%= f.password_field :password_confirmation, placeholder: "Подтвердите пароль", class: "form-control" %>
  </div>
</div>
<div class="col-sm-offset-2 col-sm-5">
  <%= f.submit button, class: 'btn btn-info' %>
</div>