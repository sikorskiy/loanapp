<div class="page-header">
  <h1>Список пользователей</h1>
</div>

<table class = "table table-striped table-bordered table-condensed table-responsive">
	<tr >
		<th> ID </th>
		<th> Пользователь
			<%= link_to users_path(sorting: "lastname") do %>
        <span class="glyphicon glyphicon-sort-by-alphabet"></span>
      <% end %>
      <%= link_to users_path(sorting: "lastname DESC") do %>
        <span class="glyphicon glyphicon-sort-by-alphabet-alt"></span>
      <% end %>
		</th>
		<th> Редактирование </th>
	</tr>
<% @users.each do |user| %>
	<tr >
		<td> <%= link_to user[:id], user_path(user[:id]) %> </td>
		<td> <%= "#{user[:email]}  #{user[:name]}  #{user[:lastname]}" %>
      <span class="badge"><%= user.loans.length %></span>
    </td>
		<td> <%= link_to "Редактировать", edit_user_path(user[:id]) %> </td>
<% end %>	
</table>
<br>
<%= will_paginate @users %>

<p><%= link_to "Список расписок", loans_path %> </p>