<div class="form-group">
  <label class="control-label col-sm-2" > Сумма: </label>
  <div class="col-sm-6">
    <%= f.text_field :sum, placeholder: "Введите сумму займа", class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2"> Срок: </label>
  <div class="col-sm-6">
    <%= f.text_field :term, placeholder: "Введите срок займа", class: "form-control"%>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-2"> Процент: </label>
  <div class="col-sm-6">
    <%= f.text_field :interest, class: "form-control", placeholder: "Введите процент займа" %>
  </div>
</div >
<p class="form-group">
  <div class="col-sm-offset-2 col-sm-6">
    <%= f.submit button, class: "btn btn-info dropdown-toggle" %>
  </div>
</p>
